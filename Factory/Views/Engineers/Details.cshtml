@{
  Layout = "_Layout";
}

@using Factory.Models;
@model Factory.Models.Engineer;

<h2>Engineer Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.EngineerName): @Html.DisplayFor(model => model.EngineerName)</h3>

@if(@Model.Machines.Count == 0)
{
  <p>This engineer has no Machines assigned</p>
}
else
{
  <h4>Machines this engineer is assigned to</h4>
  <ul>
    @foreach(EngineerMachine join in Model.Machines)
    {
      <li>@join.Machine.MachineName</li>
    }
  </ul>
}

<p>@Html.ActionLink("Assign Machine", "Assign_Machine", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Back to Engineers", "Index")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>